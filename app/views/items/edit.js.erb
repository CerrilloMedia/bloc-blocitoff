var parent = $("#item-<%= @item.id %> .entry");
<!--save old content if update doesn't occur-->
var content = $(parent).html();
<!--render the form for this item within the current page -->
parent.find('.entry-body').html('<%= j render partial: 'editform', locals: { item: @item }%>');
<!--auto select text to edit, moving the cursor to the end of the input-->
var input = $("#edit_item_<%= @item.id %> #item_body");
var tmpVal = input.val();
input.focus().val("").val(tmpVal);
<!-- find form input and if input-field is exited, replace form with original content  -->
input.on("focusout mouseout", function(event) {
  parent.html(content);
});