<div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <div class="panel panel-default">
            <div class="panel-heading panel-list-heading text-center">
        <% if current_user == @user %>
                <%= link_to edit_list_path(@list), class: 'nounderline', title: 'edit list title' do %>
                    <strong><%= @list.title %></strong>
                    <span class="glyphicon glyphicon-edit"></span>
                <% end %>
        <% else %>
                <strong><%= @list.title %></strong>
        <% end %>
        <% if current_user != @user %><br>
                <small>author: <%= @user.email %></small>
        <% end %>
            </div>
            <%= render partial: 'items/form', locals: { list: @list } %>
        </div>
    <div class="panel">
        <div class="panel-heading panel-list-heading"><%= @items.size %> items</div>
            <%= render partial: 'items/items', locals: { user: @user, items: @items } %>
    </div>
    <br>
    </div>
</div>

