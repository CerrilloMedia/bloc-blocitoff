<div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
    <div class="panel-list panel panel-default">
            <div id="lists-quantity" class="panel-heading panel-list-heading panel-body">
                <span class="col-xs-12 col-sm-6 text-center panel-body">
                    <%= pluralize(@user.lists.count, "list") %> for <%= @user.email %>
                    </span>
                <span class="pull-right col-xs-12 col-sm-6">
                    
                </span>
            </div>
            <div id="lists" class="lead">
                <%= render partial: 'lists', locals: {user: @user, lists: @lists } %>
            </div>
            <div class="panel-body new-list-footer">
                <%= render partial: 'newlist', locals: { user: @user, list: List.new, type: 'new ', button: '+', autofocus: true } %>
            </div>
            <div class="panel-footer"></div>
    </div>
</div>