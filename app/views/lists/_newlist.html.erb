<%= form_for [user,list], html: {class: 'col-xs-12'} do |f| %>
    <div class="row">
        <div class="input-group col-xs-12">
            <%= f.text_field :title, class: 'form-control pull-left', placeholder: "#{type}title", autofocus: true %>
            <span class="input-group-btn">
                <%= submit_tag button, class: 'btn btn-secondary btn-success' %>
            </span>
        </div>
    </div>
<% end %>