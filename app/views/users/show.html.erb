<div class="container">
    <div class="row">
        <div class="panel col-md-10 col-md-offset-1">
            <div class="">
                <div class="panel-body">
                    <h4 class="">Dashboard for: 
                        <% if current_user == @user %>
                            <%= link_to edit_user_registration_path, class: 'text-muted nounderline', title: 'edit user info' do %>
                                <%= @user.email %>
                                <span class="glyphicon glyphicon-edit" title="Edit User Info"></span><span class="view-on-hover"></span>
                            <% end %>
                        <% else %>
                            <%= @user.email %>
                        <% end %>
                    </h4>
                    <p class="col-xs-12">Let's see what you've accomplished this week</p>
                </div>
                <div class="panel-body-separator"></div>
                <div class="panel-body">
                    <div class="col-sm-8 col-md-6">
                        <div class="panel-body">
                            <%= render partial: 'lists/newlist', locals: { user: @user, list: List.new, type: 'New', button: 'Create' } %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div class="col-xs-12 col-sm-6">
                    <div class="well">
                            <div class="">
                                <h4>
                                <% if @user == current_user %>
                                    <%= link_to user_lists_path(@user), class: 'nounderline', title: 'Go to lists' do %>
                                        Lists
                                    <% end %>
                                <% else %>
                                        Lists
                                <% end %>
                                        <span class="badge btn-lg badge-warning">
                                            completed <%= @completed_lists.size %> of <%= @lists.size %>
                                        </span>
                                </h4>
                            </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-6">
                    <div class="well">
                        <div class="">
                            <h4>
                                Tasks
                                <span class="badge btn-lg badge-warning">
                                    completed <%= @completed_items.size %> of <%= @items.size %>
                                </span>
                            </h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>